<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Civic Issues Admin Portal</title>
    <link rel="stylesheet" href="/styles.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body { font-family: 'Inter', system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif; }
    </style>
    </head>
<body>
    <header class="site-header">
        <div class="container">
            <h1>Civic Issues Admin Portal</h1>
            <p class="subtitle">Live dashboard for municipal issue tracking</p>
        </div>
    </header>
    <main class="container">
        <section>
            <h2>Pending Issues</h2>
            <% if (pendingIssues && pendingIssues.length) { %>
                <div class="grid">
                    <% pendingIssues.forEach(function(issue){ %>
                        <article class="card">
                            <img src="<%= issue.photoUrl %>" alt="Issue photo" class="card-img" />
                            <div class="card-body">
                                <h3><%= issue.title %></h3>
                                <p><%= issue.description %></p>
                                <form method="POST" action="/issues/<%= issue._id %>/resolve">
                                    <button class="btn">Mark as Resolved</button>
                                </form>
                            </div>
                        </article>
                    <% }) %>
                </div>
            <% } else { %>
                <p class="muted">No pending issues.</p>
            <% } %>
        </section>

        <section>
            <h2>Resolved Issues</h2>
            <% if (resolvedIssues && resolvedIssues.length) { %>
                <div class="grid">
                    <% resolvedIssues.forEach(function(issue){ %>
                        <article class="card resolved">
                            <img src="<%= issue.photoUrl %>" alt="Issue photo" class="card-img" />
                            <div class="card-body">
                                <h3><%= issue.title %></h3>
                                <p><%= issue.description %></p>
                                <span class="badge">Resolved</span>
                            </div>
                        </article>
                    <% }) %>
                </div>
            <% } else { %>
                <p class="muted">No resolved issues yet.</p>
            <% } %>
        </section>
    </main>
    <footer class="site-footer">
        <div class="container">
            <p>&copy; <%= new Date().getFullYear() %> Municipal Authority</p>
        </div>
    </footer>
</body>
</html>


